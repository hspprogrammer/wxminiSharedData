/* index.wxss */
.page-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.header {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 16px;
}

.version {
  font-size: 18px;
  margin-bottom: 8px;
}

.user-info {
  margin-bottom: 16px;
}

.section-title {
  font-size: 20px;
  margin: 24px 0 8px;
}

.fruit-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.fruit-item {
  flex-basis: 48%;
  margin-bottom: 8px;
  text-align: center;
}

.button-group {
  margin-top: 24px;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.action-button {
  padding: 12px 24px;
  margin: 4px;
  border-radius: 4px;
  font-size: 16px;
  background-color: #007bff;
  color: white;
  min-width: 580rpx;
  text-align: center;
}

.action-button:hover {
  opacity: 0.8;
}